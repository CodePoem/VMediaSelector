<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <ImageView
        android:id="@+id/media_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/media_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:src="@drawable/v_selector_ui_impl_shape_unchecked"/>

    <FrameLayout
        android:id="@+id/layout_bottom_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/v_selector_ui_impl_colorPrimaryAlpha"
        android:paddingBottom="2dp"
        android:paddingTop="4dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_media_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:drawablePadding="4dp"
            android:maxEms="6"
            android:paddingLeft="4dp"
            android:textAppearance="@style/VSelectorUiImpl.Media.TextAppearance.App.Medium"
            android:textColor="@color/v_selector_ui_impl_white"
            tools:text="00:30"/>

        <TextView
            android:id="@+id/tv_media_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:maxEms="4"
            android:paddingRight="4dp"
            android:textAppearance="@style/VSelectorUiImpl.Media.TextAppearance.App.Medium"
            android:textColor="@color/v_selector_ui_impl_white"
            tools:text="20M"/>
    </FrameLayout>

    <View
        android:id="@+id/media_font_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/v_selector_ui_impl_black_alpha15"/>
</merge>